{
  "compilerOptions": {
    "target": "es2016",                     
    "module": "es2020",     
    "lib": ["es2016", "es2017.object", "dom"],                
    "declaration": true,                   
    "sourceMap": true,                     
    "outDir": "./dist",  
    "types": [
      "quill"
    ],                    
    "removeComments": true,                
    "strict": true,                         
    "moduleResolution": "node",          
    "baseUrl": "./",                       
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
